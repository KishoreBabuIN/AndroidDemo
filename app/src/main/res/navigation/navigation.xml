<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/postsListFragment">

    <fragment
        android:id="@+id/postsListFragment"
        android:name="com.kishorebabu.gorillaschallenge.ui.list.PostsListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_posts_list">
        <action
            android:id="@+id/action_post_details"
            app:destination="@id/postDetailsFragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_left"
            app:popEnterAnim="@anim/enter_from_left"
            app:popExitAnim="@anim/exit_to_right" />
    </fragment>

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.kishorebabu.gorillaschallenge.ui.details.PostDetailsFragment"
        tools:layout="@layout/fragment_post_details">
        <argument
            android:name="postId"
            app:argType="java.lang.String" />

    </fragment>
</navigation>